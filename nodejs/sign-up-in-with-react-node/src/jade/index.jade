doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title Welcome!
		link(rel="stylesheet" href="build/stylesheets/index.css")
	body
		h1#title TODO with React and Node
		#buttons
			#signin.button Sign in
			#signup No Acound?
		#loginLayer
		#login.popout
			h2 Focus On Today
			span#closeLogin x
			form(method="POST" action="/login")
				input#loginUsername(type="text" name="username" placeholder="username")
				br
				input#loginPassword(type="password" name="password" placeholder="password")
				br
				input#loginSubmit(type="submit" value="Sign in")
		#register.popout
			h2 Welcome To Join Us
			span#closeSignUp x
			form(method="POST" action="/register")
				input#signUpUsername(type="text" name="username" placeholder="username")
				br
				input#signUpPassword(type="password" name="password" placeholder="password")
				br
				input#signUpRePassword(type="password" name="rePassword" placeholder="confirm password")
				br
				input#signUpSubmit(type="submit" value="Sign up")
